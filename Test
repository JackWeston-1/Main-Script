    Icon = "Info",
    Author = "Made By Minh",
    Folder = "CapyHub",
    Size = UDim2.fromOffset(580, 460),
    Transparent = true,
    Theme = "Dark",
    SideBarWidth = 200,
    Background = "", -- rbxassetid only
    BackgroundImageTransparency = 0.42,
    HideSearchBar = true,
    ScrollBarEnabled = true,
    User = {
        Enabled = true,
        Anonymous = true,
        Callback = function()
            print("clicked")
        end,
    },
    
Window:EditOpenButton({
	Title = "Capy Hub",
	CornerRadius = UDim.new(0, 10),
	Draggable = true
});

local MainTab = Window:Tab({
    Title = "Main",
